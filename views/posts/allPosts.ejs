<% include ../partials/header %>
<style media="screen">
  #Postbtn {color:#fff;font-weight: bold;}
  #addPostBtn:hover { color:red}
</style>
  <% include ../partials/nav %>

    <div class="container-fluid ">
      <div class=" text-center">

      </div>
      <div class="row">
        <div class="container jumbotron" style="max-width:700px;width:100;">
          <h3 class="text-center">
            <% if(entry.length === 1) { %>
              <p> Currently <%= entry.length %> document available to view.</p>
            <% } else {%>
              <p> Currently <%= entry.length %> documents available to view.</p>
            <% } %>
          </h3>
          <form class="text-center"action="/posts/new" method="GET">
            <button  id="addPostBtn"style="border:1.5px solid #000;font-weight:bold;" class="btn btn-inverse btn-block" type="submit">Add A New Post</button>
          </form><br><br>


            <div style=""class="box text-center" id="formDisplay">

              <div class="" id="docDisplay">
              <% if(entry.length > 0){ %>

                <% entry.forEach(function(doc){ %>
                  <div class="doc" >
                    <h2><a style="color:#000;font-family:impact" href="/posts/<%= doc.id %>" ><%= doc.subject %></a></h2>

                      <p style="font-size: 18px;">Published: <%= doc.date.toLocaleDateString() %></p>
                  </div>
                <% }); %>

              <% } %>
              </div>
            <!-- </div> -->
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer %>
