<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Chat Node</title>
   <link rel="stylesheet" href="/css/chat.css">
  </head>
  <body class="chat">

    <div class="chat__sidebar">
      <a href="/user/home"><h4><img style="margin-bottom:-5px;" src="/images/exit.svg" width='20' alt=""> Exit Room </h4> </a><br>
      <h4>Room Members</h4>
      <div id="users"></div>
    </div>

    <div class="chat__main">
      <ol class="chat__messages"id="messages"></ol>

      <div class="chat__footer">
        <form id="message-form" class="">
          <input autofocus autocomplete="off" type="text" name="message" placeholder="Message goes here" />
          <button type="submit" name="button">Send</button>
        </form>
        <button id="send-location" name="button">Send Location</button>
      </div>

    </div>



    <script id="message-template" type="text/template">
      <li class="message">
        <div class="message__title">
          <h4>{{from}}</h4>
          <span>{{createdAt}}</span>
        </div>
        <div class="message__body">
          <p>{{text}}</p>
        </div>
      </li>
    </script>

    <script id="location-message-template" type="text/template">
      <li class="message">
        <div class="message__title">
          <h4>{{from}}</h4>
          <span>{{createdAt}}</span>
        </div>
        <div class="message__body">
          <p>
            <a href="{{url}}" target="_blank">My Current Location</a>
          </p>
        </div>
      </li>
    </script>


    <script src="/socket.io/socket.io.js" charset="utf-8"></script>
    <script type="text/javascript" src="/js/libs/jquery.3.1.0.min.js"></script>
    <script src="/js/libs/moment.js" charset="utf-8"></script>
    <script src="/js/libs/mustache.js" charset="utf-8"></script>
    <script src="/js/libs/deparams.js"></script>
    <script src="/js/chat.js"></script>
  </body>
</html>
